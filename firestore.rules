rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isTripMember(tripData) {
      return isSignedIn() && request.auth.uid in tripData.members;
    }

    function isTripAdmin(tripData) {
      return isSignedIn() && tripData.memberDetails.hasAny([
        {'userId': request.auth.uid, 'role': 'admin'}
      ]);
    }

    // Users collection
    match /users/{userId} {
      // Users can read any user's basic info (for member lookups)
      allow read: if isSignedIn();
      // Users can only write their own data
      allow write: if isOwner(userId);
    }

    // Trips collection
    match /trips/{tripId} {
      // Trip members can read trip data
      allow read: if isSignedIn() && request.auth.uid in resource.data.members;

      // Any signed-in user can create a trip (they become the admin)
      allow create: if isSignedIn()
        && request.resource.data.createdBy == request.auth.uid
        && request.auth.uid in request.resource.data.members;

      // Trip admins can update trip details
      // Members can update memberDetails (to leave) and certain fields
      allow update: if isSignedIn() && request.auth.uid in resource.data.members;

      // Only trip creator/admin can delete
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }

    // Proposals collection
    match /proposals/{proposalId} {
      // Helper to get the parent trip
      function getTripData() {
        return get(/databases/$(database)/documents/trips/$(resource.data.tripId)).data;
      }

      function getNewTripData() {
        return get(/databases/$(database)/documents/trips/$(request.resource.data.tripId)).data;
      }

      // Trip members can read proposals
      allow read: if isSignedIn() && request.auth.uid in getTripData().members;

      // Trip members can create proposals
      allow create: if isSignedIn()
        && request.auth.uid in getNewTripData().members
        && request.resource.data.createdBy == request.auth.uid;

      // Trip members can update proposals (vote, comment, change status)
      allow update: if isSignedIn() && request.auth.uid in getTripData().members;

      // Proposal creator or trip admin can delete
      allow delete: if isSignedIn()
        && (resource.data.createdBy == request.auth.uid
            || getTripData().createdBy == request.auth.uid);
    }

    // Bookings collection
    match /bookings/{bookingId} {
      // Helper to get the parent trip
      function getTripData() {
        return get(/databases/$(database)/documents/trips/$(resource.data.tripId)).data;
      }

      function getNewTripData() {
        return get(/databases/$(database)/documents/trips/$(request.resource.data.tripId)).data;
      }

      // Trip members can read all bookings for their trip
      allow read: if isSignedIn() && request.auth.uid in getTripData().members;

      // Trip members can create bookings for themselves
      allow create: if isSignedIn()
        && request.auth.uid in getNewTripData().members
        && request.resource.data.userId == request.auth.uid;

      // Users can update their own bookings
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;

      // Users can delete their own bookings
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Invitations collection (for email invites)
    match /invitations/{invitationId} {
      // Anyone can read an invitation by ID (for invite links)
      allow read: if isSignedIn();

      // Trip admins can create invitations
      allow create: if isSignedIn();

      // Trip admins can update/delete invitations
      allow update, delete: if isSignedIn()
        && resource.data.createdBy == request.auth.uid;
    }

    // Shared Timelines collection (public read for sharing)
    match /sharedTimelines/{timelineId} {
      // Anyone can read shared timelines (public access for sharing)
      allow read: if true;

      // Only signed-in users can create shared timelines
      allow create: if isSignedIn()
        && request.resource.data.createdBy == request.auth.uid;

      // Only the creator can update or delete
      allow update, delete: if isSignedIn()
        && resource.data.createdBy == request.auth.uid;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
