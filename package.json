{
  "name": "tripbi",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "check": "tsc -b && eslint .",
    "build": "node scripts/bump-build.js && tsc -b && vite build",
    "build:dev": "node scripts/bump-build.js && tsc -b && vite build --mode development",
    "build:no-bump": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "deploy": "npm run build:dev && npx firebase use dev && npx firebase deploy --only hosting",
    "deploy:dev": "npm run build:dev && npx firebase use dev && npx firebase deploy --only hosting",
    "deploy:prod": "npm run build && npx firebase use prod && npx firebase deploy --only hosting",
    "deploy:rules": "npx firebase use dev && npx firebase deploy --only firestore:rules,firestore:indexes",
    "deploy:functions": "cd functions && npm run build && cd .. && npx firebase use dev && npx firebase deploy --only functions",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "version:sync": "node scripts/sync-version.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "firebase": "^10.8.0",
    "html2pdf.js": "^0.14.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^15.14.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
